@model Reservation

@{
	var action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="reservations" asp-action="@action">
	<div class="text-danger" asp-validation-summary="All"></div>
	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="At" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<input type="text" asp-for=At class="form-control" />
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Name" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<input type="text" asp-for=Name class="form-control" />
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Email" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<input type="email" asp-for=Email class="form-control" />
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-2">
			<label asp-for="Quantity" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<input type="number" asp-for=Quantity class="form-control" />
		</div>
	</div>
	<div class="row mb-3">
		<div class="col-2">
			<input type="submit" class="btn btn-primary" value="Save" />
		</div>
		<div class="col-6">
		</div>
	</div>

	@if (action == "edit")
	{
		<input asp-for="Id" type="hidden" />
	}

</form>