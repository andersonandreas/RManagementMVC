@model CreateReservation

@{
	var action = ViewBag.Action ?? string.Empty;
}

<div class="container mt-4 mb-2">
    <h1 class="mb-4">Make a Reservation</h1>
    <form asp-action="SubmitReservation" method="@action">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="At" class="form-label"></label>
                <input asp-for="At" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" max="@DateTime.Now.AddYears(1).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="At" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="TimeSlot" class="form-label">Time</label>
                <select asp-for="TimeSlot" class="form-select">
                    <option value="">Select a time</option>
                    @foreach (var timeSlot in ViewBag.TimeSlots)
                    {
                        <option value="@timeSlot.Value">@timeSlot.Text</option>
                    }
                </select>
                <span asp-validation-for="TimeSlot" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Quantity" class="form-label"></label>
                <select asp-for="Quantity" class="form-select">
                    <option value="">Select number of people</option>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Create Reservation</button>
            <a asp-controller="Admin" asp-action="Panel" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>