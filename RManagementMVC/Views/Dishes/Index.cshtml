@model List<Dish>


<section class="py-5 bg-white">
	<div class="container">
		<h2 class="text-center mb-5 text-dark">Menu</h2>
		<div class="row g-4">
			@foreach (var dish in Model)
			{
				<article class="col-md-6 col-lg-4">
					<div class="card h-100 border-0 shadow-sm">
						<img src="" class="card-img-top" alt="@dish.Name" style="height: 200px; object-fit: cover;">
						<div class="card-body d-flex flex-column">
							<h3 class="card-title h5 text-primary">@dish.Name</h3>
							<p class="card-text text-secondary flex-grow-1">@dish.Description</p>
							<p class="card-text fw-bold text-dark mt-2">@dish.Price.ToString("c")</p>
						</div>
					</div>
				</article>
			}
		</div>
	</div>
</section>