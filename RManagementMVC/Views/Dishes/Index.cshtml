@model List<Dish>


	@if(Model !=null && Model.Count() > 0) {

		<table class="table table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Description</th>
					<th>Price</th>
					<th>Available</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			@foreach(var dish in Model)
			{
				<tr>
					<td>@dish.Name</td>
					<td>@dish.Description</td>
					<td>@dish.Price.ToString("c")</td>
					<td>@dish.IsAvailable</td>
					<td>
						<a class="btn btn-link" 
						asp-controller="Dishes" 
						asp-action="Edit" 
						asp-route-id="@dish.Id">Edit
					</a
					></td>
				</tr>
			}
			</tbody>
		</table>

		<button class="btn btn-primary ">
			<a asp-controller="dishes" asp-action="create"/>
			Add
			</button>
	}	