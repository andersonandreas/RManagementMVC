@model AdminPanelViewModel
@{
	ViewData["Title"] = "Admin Panel";
}


<h2 class="text-center mt-4">Admin Panel</h2>

<section>

	<h3>Reservations</h3>

	@if (Model?.Reservations?.Any() == true)
	{
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">At</th>
					<th scope="col">Name</th>
					<th scope="col">Email</th>
					<th scope="col">Quantity</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var reservation in Model.Reservations)
				{
					<tr>
						<td>@reservation.At</td>
						<td>@reservation.Name</td>
						<td>@reservation.Email</td>
						<td>@reservation.Quantity</td>
						<td>
							<a class="btn btn-primary btn-sm"
							   asp-controller="Reservations"
							   asp-action="Edit"
							   asp-route-id="@reservation.Id">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
									<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
								</svg>
								Edit
							</a>

							<a class="btn btn-secondary btn-danger btn-sm"
							   asp-controller="Reservations"
							   asp-action="Delete"
							   asp-route-id="@reservation.Id"
							   onclick="return doubleCheckBeforeDelete('reservation')">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
									<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
									<path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
								</svg>
								Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

		<a asp-controller="Reservations" asp-action="Create" class="btn btn-primary">Create Reservation</a>
	}
	else
	{
		<p>No reservations at this time</p>
		<a asp-controller="Reservations" asp-action="Create" class="btn btn-primary">Create Reservation</a>

	}
</section>

<hr aria-hidden="true">

<section>

	<h3>Dishes</h3>

	@if (Model?.Dishes?.Any() == true)
	{
		<table class="table table-striped mt-3">
			<thead>
				<tr>
					<th scope="col">Name</th>
					<th scope="col">Description</th>
					<th scope="col">Price</th>
					<th scope="col">Available</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var dish in Model.Dishes)
				{
					<tr>
						<td>@dish.Name</td>
						<td>@dish.Description</td>
						<td>@dish.Price.ToString("c")</td>
						<td>@dish.IsAvailable</td>
						<td>
							<a class="btn btn-primary btn-sm"
							   asp-controller="Dishes"
							   asp-action="Edit"
							   asp-route-id="@dish.Id">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
									<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
								</svg>
								Edit
							</a>
							<a class="btn btn-secondary btn-danger btn-sm"
							   asp-controller="Dishes"
							   asp-action="Delete"
							   asp-route-id="@dish.Id"
							   onclick="return doubleCheckBeforeDelete('dish')">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
									<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
									<path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
								</svg>
								Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
		<a asp-controller="Dishes" asp-action="Create" class="btn btn-primary">Create Dish</a>
	}
	else
	{
		<p>No dishes available at this time</p>
		<a asp-controller="Dishes" asp-action="Create" class="btn btn-primary">Create Dish</a>
	}
</section>






@section Scripts {
	<script>
		function doubleCheckBeforeDelete(itemType) {
			return confirm(`Delete ${itemType}, are you sure?`);
		}
	</script>
}