<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="description" content="Restaurang Andreas MVC erbjuder en modern matupplevelse med fokus på lokala råvaror och innovativ matlagning i Stockholm.">
	<title>@ViewData["Title"] - Restaurant MVC</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/RManagementMVC.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100 m-0">
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Huvudnavigering">
			<div class="container">
				<a class="navbar-brand" asp-controller="Home" asp-action="Index" >Restaurang Andreas MVC</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Visa/dölj meny">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link">About us</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Dishes" asp-action="Index">Menu</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#boka">Book</a>
						</li>

					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>


	<footer class="bg-dark text-light py-4 mt-auto">
		<div class="container">
			<div class="row">
				<div class="col-md-4 mb-3 mb-md-0">
					<h2 class="h5">Kontakt</h2>
					<address>
						Tel: <a href="tel:+4681234567" class="text-light">08-123 45 67</a><br>
						E-post: <a href="mailto:info@andreasmvc.se" class="text-light">info@andreasmvc.se</a>
					</address>
				</div>
				<div class="col-md-4 mb-3 mb-md-0">
					<h2 class="h5">Adress</h2>
					<address>
						Storgatan 1<br>
						123 45 Stockholm
					</address>
				</div>
				<div class="col-md-4">
					<h2 class="h5">Öppettider</h2>
					<ul class="list-unstyled">
						<li>Tis-Lör: 17:00 - 23:00</li>
						<li>Sön-Mån: Stängt</li>
					</ul>
				</div>
			</div>
			<hr class="mt-4 mb-3 border-secondary">
			<div class="row">
				<div class="col-12 text-center">
					<small class="text-muted">
						© 2024 Restaurang Andreas MVC.
						<a asp-controller="Account" asp-action="Login"  class="text-muted ms-2 text-decoration-none aria-label="Admin login panel" >
							Admin
						</a>
					</small>
				</div>
			</div>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
